<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Show Quiz</title>
    <style>
      * {
        padding: 0;
        margin: 0;
      }
      body {
        height: 100vh;
        /* width: 100vw; */
        background: linear-gradient(to right, rgb(13, 0, 72), rgb(108, 0, 108));
        color: white;
      }
      .btn{
        padding: 8px 10px;
        background: linear-gradient(
          to right,
          rgb(55, 103, 215),
          rgb(220, 69, 220)
        );
        border: 2px solid;
        border-radius: 5px;
        text-align: center;
      }
      .btn a{
        text-decoration: none;
        color: white;
      }
      .generate-form {
        background: linear-gradient(
          to right,
          rgb(55, 103, 215),
          rgb(220, 69, 220)
        );
        border: 2px solid;
        border-radius: 5px;
        display: flex;
        flex-direction: column;
        gap: 10px;
        padding: 20px;
        margin: 25px;
      }
      .generate-form input {
        padding: 4px;
        border-radius: 5px;
        border: 2px solid white;
        background-color: rgb(100, 36, 209);
        color: white;
      }
      .generate-form input::placeholder {
        color: white;
      }
      .generate-submit-btn {
        background-image: linear-gradient(
          to right,
          rgb(20, 94, 173),
          rgb(55, 196, 243)
        );
      }
      .generate-submit-btn:hover {
        background-image: linear-gradient(
          to right,
          rgb(20, 33, 173),
          rgb(55, 243, 215)
        );
      }

      .quiz-card-container {
        display: flex;
        /* flex-direction: column; */
        align-items: center;
        flex-wrap: wrap;
        gap: 6px;
      }
      .quiz-card {
        border-radius: 5px;
        border: 2px solid white;
        display: flex;
        align-items: center;
        gap: 4px;
        padding: 20px;
        width: 200px;
        height: 200px;
      }
      .quiz-card ul {
        list-style: none;
      }
      .card-btn{
        width: 100px;
        font-size: 14px;
      }
    </style>
  </head>
  <body>
    <button class="btn home-btn"><a href="/">Home</a></button>
    <button class="btn create-btn"><a href="/quiz/create-quiz">Create Quiz</a></button>
    <button class="btn"><a href="/quiz/generate">Generate</a></button>
    <div class="quiz-card-container">
      <% quizzes.forEach(quiz => { %>
      <div class="quiz-card">
        <ul>
          <li>Title: <%= quiz.title %></li>
          <li>Description: <%= quiz.description %></li>
          <li>CreatedBy: <%= quiz.createdBy.fullName %></li>
          <li class="btn card-btn"><a href="/quiz/<%= quiz._id %>">Click To Show</a></li>
        </ul>
      </div>
      <% }) %>
    </div>
  </body>
</html>
